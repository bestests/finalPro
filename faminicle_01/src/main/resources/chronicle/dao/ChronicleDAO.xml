<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="chronicle.dao.ChronicleDAO">
	<resultMap type="chronicle" id="chronicleMap">
		<result column="no" property="no" />
		<result column="content" property="content" />
		<result column="reg_date" property="regDate" />
		<result column="pic_date" property="picDate" />
		<result column="file_path" property="filePath" />
		<result column="row_num" property="rNum" />
	</resultMap>
	<select id="selectList" resultMap="chronicleMap">
		select *
		  from listtest
		 order by reg_date desc
		 limit 24
	</select>
	<select id="selectPrevList" parameterType="page" resultMap="chronicleMap">
		select t.*
		  from (
		  		select *
		  		  from listtest
		  		 where reg_date <![CDATA[>=]]> #{startDate}
		  		   and no != #{pageNo}
		  		 order by reg_date asc
		  		 limit 24
		  		)as t
		 order by reg_date desc 		
	</select>
	
	<select id="selectNextList" parameterType="page" resultMap="chronicleMap">
		select *
		  from listtest
		 where reg_date <![CDATA[<=]]> #{endDate}
		   and no != #{pageNo}
		 order by reg_date desc
		 limit 24 
	</select>
	
	<insert id="insertMember" parameterType="members">
		insert into fam_member(id,pass,e_mail,name,birthday,tel)
		values(#{id},#{pass},#{eMail},#{name},#{birthday},${tel})
	</insert>
	
	<select id="checkId" parameterType="members" resultType="int">
		select count(*)
		from fam_member
		where id = #{id}
	</select>
	
	<select id="checkPass" parameterType="members" resultType="members">
		select pass
		  from fam_member
		 where id = #{id} 
	</select>
	
	<select id="memberInfo" parameterType="members" resultMap="loginMap">
		select * 
		from fam_member
		where id = #{id}
	</select>
	
	<update id="updateMember" parameterType="members">
		update fam_member
		set pass   = #{pass}, 
			e_Mail = #{eMail},
			tel    = #{tel}
		where id = #{id} 
	</update>
	
	<!-- 
	<update id="updataMemberPic" parameterType="members">
		update fam_member
		set pic_File_Path = #{picFilePath}
		where id = #{id}
	</update>
	-->
	
	<resultMap type="members" id="loginMap">
		<result column="mem_no" property="memNo" />
		<result column="id" property="id" />
		<result column="pass" property="pass" />
		<result column="e_mail" property="eMail" />
		<result column="pic_File_Path" property="picFilePath" />
		<result column="name" property="name" />
		<result column="birthday" property="birthday" />
		<result column="tel" property="tel" />
	</resultMap>
	<select id="loginCheck" parameterType="LoginCheck" resultMap="loginMap">
		select *
		from fam_member
		where id= #{id} and pass=#{pass}
	</select>
	
	<insert id="insertpic" parameterType="regist">
		insert into fam_pic(MEM_NO, TITLE, PIC_DATE, PIC_FILE_PATH, LAT, LNG)
		values(#{memNo}, #{title}, #{picDate}, #{picFilePath}, #{lat}, #{lng})
	</insert>
	
</mapper>